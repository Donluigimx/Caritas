<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Relaciona la palabra conforme a lo que te provoca "
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:indeterminate="false"
        android:layout_marginTop="65dp"
        android:progressDrawable="@drawable/circulo"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/c2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:onClick="click"
        android:scaleType="centerInside"
        android:src="@drawable/control2"
        android:layout_alignTop="@+id/c3"
        android:layout_toStartOf="@+id/c3"
        android:layout_marginEnd="3dp" />

    <ImageButton
        android:id="@+id/c4"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:onClick="click"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/control4"
        android:layout_marginStart="3dp"
        android:layout_alignTop="@+id/c3"
        android:layout_toEndOf="@+id/c3" />

    <ImageButton
        android:id="@+id/c5"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/c3"
        android:layout_marginEnd="8dp"
        android:background="@android:color/white"
        android:onClick="click"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/control5" />

    <ImageButton
        android:id="@+id/c1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:onClick="click"
        android:scaleType="centerInside"
        android:src="@drawable/control1"
        android:layout_alignTop="@+id/c3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="9dp" />

    <ImageButton
        android:id="@+id/c3"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@android:color/white"
        android:onClick="click"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/control3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>